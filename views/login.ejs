<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Page</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="row justify-content-center" style="padding: 0; margin: 9.5em 0">
      <div class="col-md-4">
        <main class="form-signin">
          <h1 class="h2 mb-3 fw-normal text-center">Please Login</h1>
          <% if (messages.error) { %>
          <p class="text-center" style="color: red"><%= messages.error %></p>
          <% } %> <% if (messages.success) { %>
          <p class="text-center" style="color: green"><%= messages.success %></p>
          <% } %>
          <form action="/login" method="POST">
            <div class="form-floating">
              <input type="text" name="username" class="form-control mb-1" id="username" placeholder="yourusername" autofocus required />
              <label for="username">Username</label>
            </div>
            <div class="form-floating">
              <input type="password" name="password" class="form-control mb-2" id="password" placeholder="Password" required />
              <label for="password">Password</label>
            </div>

            <input class="w-100 btn btn-lg btn-primary" type="submit" value="Login" />
          </form>
          <div class="text-center mt-2">
            <a href="/register">Didn't have account? Register</a>
            <span class="bold">|</span>
            <a href="/forgot-password">Forgot Your Password?</a>
          </div>
        </main>
      </div>
    </div>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"
  ></script>
</html>
